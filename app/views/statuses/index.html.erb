<div class="wrapper col3">
  <div id="featured_intro">
    <% for user in @usersd %>
    <%= link_to user.name,:controller => "statuses", 
            :action => "profile",
	     :id => user.id%>
    <% end if @usersd %>
  </div>
  
<div id="featured_intros">
    <div><center>
      <p><%= form_for(@statusd) do |f| %>

 <p class="mind">   <%= f.label :"what's on your mind "%><br>
    <%= f.text_area :post ,rows: 6,class: 'width'%><br>
    <%= f.submit %>
</p><% end %></p></center></div>
    </div>

<% @datad.each do |slam| %>
  <div id="featured_intro"> <div>   
        <% if slam.user_id==current_user.id %>
      <%= link_to slam.user.username, :controller => "statuses", 
            :action => "profile", 
            :id => current_user.id %><br>
	<%= slam.post %><br>
        <% end %>
      </div></div>
     <% end %>
 


  </div>

