<!-- ####################################################################################################### -->
<div class="wrapper col3">
  <div id="featured_intro">
    <% for user in @usersd %>
    <%= link_to user.fname,:controller => "statuses", 
            :action => "profile",
	     :id => user.id%>

<% if Slamrequest.where(from_user_id: current_user.id,to_user_id: user.id).blank? %>
<%= link_to "connect", :controller => "slamrequests", :action => "index", :id => user.id %></br>
<% else %>
    
  <% end %>
<% end if @usersd %>
  </div>
  
<div id="featured_intros">
    <div><center>
      <p><%= form_for(@statusd) do |f| %>

 <p class="mind">   
    <%= f.text_area :post, rows: 4,class: 'width', :placeholder => "What's on your mind!!!!"%><br>
    <%= f.submit %>
</p><% end %></p></center></div>
    </div>

<% @is_connected.each_with_index do |f, index| %>
	
<% Status.where(user_id: f.to_user_id).each do |s| %>
		<div id="featured_intro"> <div>		
		
<%= link_to User.find(f.to_user_id).fname, :controller => "statuses", 
            		:action => "profile", 
            		:id => f.to_user_id %><br>
		<%= s.post %><br>
</div></div>
<% end %>

 <% end %> 
<% @datad.each do |slam| %>
<% if slam.user_id==current_user.id %>  
<div id="featured_intro"> <div>   
      <%= link_to slam.user.username, :controller => "statuses", 
            :action => "profile", 
            :id => current_user.id %><br>
	<%= slam.post %><br>
</div></div>
     
      
      <% end %><% end %>
 


  </div>

